<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dlira.info.InfoActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:id="@+id/imv_photo"
        android:src="@drawable/templo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_tours"
        android:textColor="@color/color_white"
        android:text="@string/tours"
        android:textSize="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_45"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/color_beige"
        android:layout_below="@+id/txt_tours">
    </View>
    <TextView android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parroquia_text"
        android:textSize="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_45"
        android:textAlignment="center"
        android:layout_below="@id/imv_photo"
        tools:ignore="InvalidId" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_info"
        android:textSize="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_45"
        android:textAlignment="inherit"
        android:layout_below="@id/txt_title"
        tools:ignore="InvalidId" />

</RelativeLayout>
